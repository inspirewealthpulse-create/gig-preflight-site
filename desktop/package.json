{
  "name": "gig-preflight-desktop",
  "version": "1.0.0",
  "description": "Desktop GUI for Gig Preflight using Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
    "dependencies": {},
  "devDependencies": {
    "electron": "^29.2.0",
    "electron-builder": "^24.6.0"
  },

 
  "build": {
    "appId": "com.gigpreflight.desktop",
    "productName": "Gig Preflight",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
